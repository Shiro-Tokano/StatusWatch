@{
    var title = (ViewData["Title"] as string) ?? "StatusWatch";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title — StatusWatch</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <!-- Иконки -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Мои стили -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-body">
    <header class="border-bottom bg-white">
        <nav class="navbar navbar-expand-lg container">
            <a class="navbar-brand fw-semibold" href="/">
                <i class="bi bi-activity me-1"></i> StatusWatch
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topnav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="topnav" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/status">Статус</a></li>
                </ul>
                <span class="navbar-text text-secondary small">
                    @DateTime.Now.ToString("dd.MM.yyyy HH:mm")
                </span>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="border-top py-3">
        <div class="container small text-secondary d-flex justify-content-between">
            <span>&copy; @DateTime.UtcNow.Year StatusWatch</span>
            <span>API: <code>/api/status/summary</code></span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
