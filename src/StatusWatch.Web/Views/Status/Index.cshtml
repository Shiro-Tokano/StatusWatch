@model IEnumerable<StatusWatch.Web.Models.ServiceStatusVm>
@{
    ViewData["Title"] = "Статус сервисов";
}
<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 m-0">@ViewData["Title"]</h1>
    <div class="d-flex align-items-center status-legend">
        <span class="status-dot dot-up"></span><small class="text-secondary">OK</small>
        <span class="status-dot dot-down ms-3"></span><small class="text-secondary">Инцидент</small>
        <span class="status-dot dot-na ms-3"></span><small class="text-secondary">Нет данных</small>
    </div>
</div>

<div class="card card-slim">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Сервис</th>
                    <th>URL</th>
                    <th>Состояние</th>
                    <th>Последняя проверка</th>
                    <th>Латентность, мс</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    var hasIncident = s.HasOpenIncident;
                    var lastOk = s.LastIsSuccess == true;
                    <tr>
                        <td class="fw-medium">@s.Name</td>
                        <td class="text-break">@s.Url</td>
                        <td>
                            @if (hasIncident)
                            {
                                <span class="badge badge-down">Инцидент</span>
                            }
                            else if (lastOk)
                            {
                                <span class="badge badge-up">OK</span>
                            }
                            else
                            {
                                <span class="badge badge-na">Нет данных</span>
                            }
                        </td>
                        <td>@(s.LastCheckUtc?.ToLocalTime().ToString("dd.MM.yyyy HH:mm:ss") ?? "-")</td>
                        <td>@(s.LastLatencyMs?.ToString() ?? "-")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
